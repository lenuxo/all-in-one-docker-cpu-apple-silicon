# 环境变量配置示例
# 复制为 .env 并根据需要修改

# 应用配置
ENV=development
DEBUG=true
API_VERSION=1.0.0

# 服务器配置
HOST=0.0.0.0
PORT=8000
WORKERS=1

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=json

# 文件限制
MAX_FILE_SIZE_MB=50
MAX_AUDIO_DURATION_SECONDS=600
MAX_BATCH_FILES=20

# 存储配置
UPLOAD_DIR=api/static/uploads
RESULTS_DIR=api/static/results
TEMP_DIR=api/temp
CLEANUP_INTERVAL_HOURS=24

# 模型配置
DEFAULT_MODEL=harmonix-all
DEFAULT_DEVICE=cpu
MODEL_CACHE_SIZE=2

# 安全配置
CORS_ORIGINS=["*"]
RATE_LIMIT_PER_MINUTE=30
MAX_CONCURRENT_REQUESTS=5

# Redis配置（可选）
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
CACHE_TTL_SECONDS=3600

# 任务队列配置
BATCH_TASK_TIMEOUT_SECONDS=3600
MAX_BATCH_QUEUE_SIZE=100

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL_SECONDS=30

# 邮件通知配置（可选）
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_TLS=true
NOTIFICATION_FROM=noreply@music-analysis.com

# 第三方服务配置
SENTRY_DSN=
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# 开发配置
RELOAD=true
ACCESS_LOG=true
PROFILING_ENABLED=false